#include <stdio.h>

int main() {
    int array[] = {10, 25, 8, 15, 32, 12, 6};
    int size = sizeof(array) / sizeof(array[0]);

    for (int i = 0; i < size; i++) {
        if (array[i] % 2 == 0) {
            printf("%d is even\n", array[i]);
        } else {
            printf("%d is odd\n", array[i]);
        }
    }

    return 0;
}
output
10 is even
25 is odd
8 is even
15 is odd
32 is even
12 is even
6 is even
