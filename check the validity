#include <stdio.h>
#include <stdbool.h>

bool isValidString(const char *str) {
    return (str != NULL && str[0] != '\0');
}

int main() {
    const char *input = "Hello, world!";
    
    if (isValidString(input)) {
        printf("String is valid.\n");
    } else {
        printf("String is not valid.\n");
    }
    
    return 0;
}
output:
string is valid
